<UserControl x:Class="ShoppingList2.AddToShopingListControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ShoppingList2"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock Height ="25" Text="Add Item to List" Grid.Row="0"/>
        <TextBox Height="25" Name="ItemToAdd" Grid.Row="1"/>
        <Button Height="25" Name="AddButton" Grid.Row="2">Add</Button>
    </Grid>
</UserControl>
